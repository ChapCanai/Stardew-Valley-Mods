   //------------------WARPS&PROPERTIES
   
   {
        "Action": "EditMap",
        "Target": "Maps/Mountain",
		 "Update": "OnTimeChange",
		 "When": {
                "Shed": true,	
            },	
        "MapTiles": [
          {
            "Position": {"X": 109, "Y": 7},
            "Layer": "Buildings",

            "SetProperties": { "Action": "Warp 7 12 {{ModId}}_Custom_quarry_shed" },
			 
          }
        ],
        },
	  
    { //trees and crops
    "Action": "EditMap",
    "Target": "Maps/Mountain",
	"MapProperties": {
     "AllowGrassSurviveInWinter": "t",
	  "IsFarm": "t",
	  "ForceAllowTreePlanting": "t",
		},
	"When": { 
		"Mod Enabled": "true", 
